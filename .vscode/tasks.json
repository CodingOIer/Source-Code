{
    "tasks": [
        {
            "label": "Clang++ builds C++ executables",
            "command": "clang++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${workspaceFolder}/.build/${fileBasenameNoExtension}",
                "-std=c++17",
                "-DLOCAL",
                "-Wall",
                "-Wextra",
                "-Wpedantic"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Default Build Task"
        }
    ],
    "version": "2.0.0"
}