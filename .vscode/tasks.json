{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: Clang++ Build C++ File",
            "command": "clang++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${workspaceFolder}\\.Build\\${fileBasenameNoExtension}.exe",
                "-std=c++20"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Default Build Task"
        }
    ],
    "version": "2.0.0"
}